# 환경 변수 설정 예시 파일
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# 디렉토리 설정
CACHE_DIR=cache
OUTPUT_DIR=reports

# 뉴스 수집 설정
NEWS_MAX_PAGES=10
NEWS_REQUEST_DELAY=1.0
NEWS_TIMEOUT=10

# 네이버 뉴스 API 설정 (뉴스 수집용)
# https://developers.naver.com/ 에서 애플리케이션 등록 후 발급
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here

# OpenAI API 설정 (AI 분석용 - 필수)
# https://platform.openai.com/ 에서 API 키 발급
# GPT-4o mini: 개별 기사 감정 분석
# GPT-4o: 종합 검증 및 미래 전망 분석
OPENAI_API_KEY=your_openai_api_key_here

# ECOS API 설정 (한국은행 경제통계시스템 - 선택사항)
# https://ecos.bok.or.kr 에서 API 키 발급 후 설정
ECOS_API_KEY=your_ecos_api_key_here
ECOS_BASE_URL=https://ecos.bok.or.kr/api
ECOS_REQUEST_DELAY=0.5
ECOS_TIMEOUT=10

# 분석 설정
MIN_SIGNIFICANCE_SCORE=0.3
MAX_TOP_NEWS=10

# 로그 설정
LOG_LEVEL=INFO